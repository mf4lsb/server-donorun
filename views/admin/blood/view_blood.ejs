<%- include('../../partials/header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">

    <%- include('../../partials/sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <%- include('../../partials/navbar.ejs') %>

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-4 text-gray-800">Halaman Darah</h1>
                <p class="mb-4">Halaman ini berisikan daftar pendonor yang sudah di verifikasi dan yang belum di
                    verifikasi. Terdapat pula fungsi untuk menambahkan data pendonor yang telah menyelesaikan donor.</p>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Daftar Pendonor</h6>
                        <p class="m-0">Menampilkan user yang mengaktifkan status Donor</p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>NIK</th>
                                        <th>Phone Number</th>
                                        <th>Alamat</th>
                                        <th>Jenis Kelamin</th>
                                        <th>Golongan Darah</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>NIK</th>
                                        <th>Phone Number</th>
                                        <th>Alamat</th>
                                        <th>Jenis Kelamin</th>
                                        <th>Golongan Darah</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% giver.forEach(data => { %>
                                    <tr>
                                        <td><%= data.name %></td>
                                        <td><%= data.identity %></td>
                                        <td><%= data.phone_number %></td>
                                        <td><%= data.address %>, <%- data.city %>, <%- data.postal_code %> </td>
                                        <td><%= data.gender %></td>
                                        <td><%= data.blood_type %>, <%- data.rhesus %> </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <%- include('../../partials/footer.ejs') %>

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" href="login.html">Logout</a>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/js.ejs') %>

